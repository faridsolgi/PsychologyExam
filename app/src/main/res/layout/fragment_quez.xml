<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@color/primery_black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.quezFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape_background_quez_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:layout_margin="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="6/90"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:fontFamily="@font/yekan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textview_FragmentQuez_id" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textview_FragmentQuez_id"
            android:fontFamily="@font/yekan"
            tools:text="تحسین ها و تعریف های بسیاری باعث می شود که من احساس کنم فرد ارزشمندی هستم "
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp"

            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="8dp"
            android:id="@+id/textview_FragmentQuez_question" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:padding="4dp"
            android:id="@+id/radioGroup_QuezFragment_radioGroup"
            app:layout_constraintEnd_toEndOf="@+id/textview_FragmentQuez_question"
            app:layout_constraintStart_toStartOf="@+id/textview_FragmentQuez_question"
            app:layout_constraintTop_toBottomOf="@+id/textview_FragmentQuez_question">

            <RadioButton
                android:id="@+id/radioButton1"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:background="@drawable/selector_radio_button_background"
                android:button="@null"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="1" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:background="@drawable/selector_radio_button_background"
                android:button="@null"
                android:textAlignment="center"
                android:layout_margin="4dp"
                android:layout_height="wrap_content"
                android:text="2" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/selector_radio_button_background"
                android:button="@null"
                android:textAlignment="center"
                android:text="3" />

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="match_parent"
                android:background="@drawable/selector_radio_button_background"
                android:button="@null"
                android:layout_margin="4dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="4" />

            <RadioButton
                android:id="@+id/radioButton5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_radio_button_background"
                android:button="@null"
                android:layout_margin="4dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="5" />

            <RadioButton
                android:id="@+id/radioButton6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/selector_radio_button_background"
                android:layout_margin="4dp"
                android:button="@null"
                android:textAlignment="center"
                android:text="6" />
        </RadioGroup>

        <Button
            android:id="@+id/button_QuezFragment_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_background_button"
            android:text="@string/next"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radioGroup_QuezFragment_radioGroup" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>